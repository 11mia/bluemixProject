<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ibmMeeting.Dao.BoardingDao">

<select id="BoardingListAll" resultType ="HashMap">
	select *
	from member
	where MEM_STATE="정상";
</select>

<!-- parameterType = "context" 
 -->
 <select id="BoardingListName"  resultType ="HashMap">
	select *
	from member
	where mem_name=#{selectedName};
</select>

<select id="BoardingListNumber" resultType ="HashMap">
	select *
	from member
	where mem_no=#{selectedNumber};		
</select>















<select id="noShowUserList" resultType ="HashMap">
	SELECT *
	FROM MEMBER
	WHERE COUNT_WARN > 2 AND MEM_STATE="정상";
</select>

<select id="noShowCountPlus" parameterType="Integer">
	UPDATE MEMBER
	SET COUNT_WARN = COUNT_WARN+1
	WHERE MEM_NO=#{memberSeq};
</select>

<select id="noShowCountMinus" parameterType="Integer">
	UPDATE MEMBER
	SET COUNT_WARN = COUNT_WARN-1
	WHERE MEM_NO=#{memberSeq};
</select>

<select id="noShowCountInit" parameterType="Integer">
	UPDATE MEMBER
	SET COUNT_WARN = 0
	WHERE MEM_NO=#{memberSeq};
</select>

<select id="memeberBlock" parameterType="Integer">
	UPDATE MEMBER
	SET MEM_STATE="차단"
	WHERE MEM_NO=#{memberSeq};
</select>
	
</mapper>