<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ibmMeeting.Dao.TestDao">
    <select id="updateNames">
       SET NAMES UTF8;
    </select>
    
    <select id="updateClient">
       SET CHARACTER_SET_CLIENT = UTF8;
    </select>
    
    <select id="updateConnection">
       SET CHARACTER_SET_CONNECTION = UTF8;
    </select>
    
    <select id="updateDatabase">
       SET CHARACTER_SET_DATABASE = UTF8;
    </select>
    
    <select id="updateResults">
       SET CHARACTER_SET_RESULTS = UTF8;
    </select>
    
     <select id="updateServer">
       SET CHARACTER_SET_SERVER = UTF8;
    </select>
    
     <select id="updateSystem">
       SET CHARACTER_SET_SYSTEM = UTF8;
    </select>
    
    <select id="getSystemInfo" resultType="HashMap">
    	show variables like 'char%';
    </select>
    
    <select id="test">
    	select sysdate();
    
    </select>
</mapper>
